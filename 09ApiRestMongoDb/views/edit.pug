extends layout

block content
	section.container
		h1.header= title
		article.item
			form.form(method="post", action="/actualizar/"+data._id)
				input(type="hidden", name="_method", value="PUT")
				//- el id esta oculto porque el usuario no lo tiene que ver, pero igual se tiene que enviar en el formulario
				input(type="hidden", name="_id", value=data._id)
				fieldset
					div
						input(type="text", name="name", placeholder="Nombre", value=data.name, required)
					div
						input(type="text", name="twitter", placeholder="Twitter", value=data.twitter, required)
					div
						input(type="text", name="country", placeholder="Pais", value=data.country, required)
					div
						input(type="text", name="side", placeholder="Equipo", value=data.side, required)
					div
						input.button.edit(type="submit", value="Editar")
		a.button.show(href="/") Inicio